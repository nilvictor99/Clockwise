{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["php", "node"],
      "phases": {
        "setup": {
          "nixPkgs": ["php82", "nodejs_20"]
        },
        "install": {
          "cmds": ["composer install --no-dev --optimize-autoloader"]
        },
        "build": {
          "cmds": ["npm install", "npm run build", "php artisan optimize", "php artisan config:cache", "php artisan route:cache", "php artisan view:cache", "php artisan migrate --force"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=8080"
  }
}